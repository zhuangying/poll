<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.QuestionVMMapper">
<select id="findAll" resultMap="QuestionVMResultMap">
select * from poll_question
</select>
<resultMap id="QuestionVMResultMap" type="com.briup.apps.poll.bean.extend.QuestionVM">
<id column="id" property="id"/>
<result column="name" property="name"/>
<result column="questionType" property="questionType"/>
<collection
 column="id"
 property="options"
 javaType="ArrayList"
 ofType="com.briup.apps.poll.bean.Options"
 select="selectOptionByQuestionId">
</collection><!-- column：表中的列    property：类中的属性 -->
</resultMap>
<select 
id="selectOptionByQuestionId" 
resultType="com.briup.apps.poll.bean.Options"
parameterType="Long">
select * from poll_options where question_id=#{id}
</select>
</mapper>
